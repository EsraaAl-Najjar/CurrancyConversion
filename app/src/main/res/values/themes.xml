<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrancyConversion" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CurrancyConversion.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CurrancyConversion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CurrancyConversion.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<!--    TextStyles-->
    <style name="tv_screen_title_custom_color">
        <item name="android:textColor">@color/design_default_color_primary_dark</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:gravity">center</item>
    </style>
<!--    EditTextStyles-->
    <style name="et_layout_main">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>
    <style name="et_main">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@drawable/bg_et</item>
    </style>

    <style name="et_Spinner">
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/design_default_color_primary</item>
    </style>
</resources>